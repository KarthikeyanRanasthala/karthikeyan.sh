{
  "name": "karthikeyan.sh",
  "version": "1.1.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p $PORT",
    "type-check": "tsc",
    "lint": "eslint .",
    "prettify": "prettier --write **/*.{ts,tsx,json}",
    "handle-posts": "rimraf dist && ncc build ./scripts/handlePosts.ts && node ./dist/index.js"
  },
  "cacheDirectories": [
    ".next/cache"
  ],
  "engines": {
    "node": "12.16.3",
    "npm": "6.14.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KarthikeyanRanasthala/karthikeyan.sh.git"
  },
  "author": "Karthikeyan Ranasthala",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KarthikeyanRanasthala/karthikeyan.sh/issues"
  },
  "homepage": "https://github.com/KarthikeyanRanasthala/karthikeyan.sh#readme",
  "dependencies": {
    "@mapbox/rehype-prism": "0.6.0",
    "dayjs": "^1.8.33",
    "firebase": "^7.18.0",
    "gray-matter": "4.0.2",
    "mongoose": "5.11.8",
    "next": "^10.0.3",
    "next-mdx-remote": "^1.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-icons": "^3.10.0",
    "tailwindcss": "2.0.3"
  },
  "devDependencies": {
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.46",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "@zeit/ncc": "^0.22.3",
    "autoprefixer": "^10.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-react": "^7.20.6",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "postcss": "^8.2.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "styled-jsx-plugin-postcss": "^4.0.0",
    "typescript": "^3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run type-check && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "npm run lint",
      "npm run prettify"
    ]
  }
}
