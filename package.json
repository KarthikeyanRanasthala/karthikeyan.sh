{
  "name": "karthikeyan.sh",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc",
    "lint": "eslint .",
    "prettify": "prettier --write **/*.{ts,tsx,json}",
    "handle-posts": "rimraf dist && ncc build ./scripts/handlePosts.ts && node ./dist/index.js",
    "prebuild": "npm run handle-posts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KarthikeyanRanasthala/karthikeyan.sh.git"
  },
  "author": "Karthikeyan Ranasthala",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KarthikeyanRanasthala/karthikeyan.sh/issues"
  },
  "homepage": "https://github.com/KarthikeyanRanasthala/karthikeyan.sh#readme",
  "dependencies": {
    "dayjs": "1.8.33",
    "next": "9.5.2",
    "next-mdx-remote": "0.6.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-icons": "3.10.0"
  },
  "devDependencies": {
    "@mapbox/rehype-prism": "0.5.0",
    "@types/mongoose": "5.7.36",
    "@types/node": "14.0.27",
    "@types/react": "16.9.46",
    "@typescript-eslint/eslint-plugin": "3.9.0",
    "@typescript-eslint/parser": "3.9.0",
    "@zeit/ncc": "0.22.3",
    "dotenv": "8.2.0",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-react": "7.20.6",
    "gray-matter": "4.0.2",
    "husky": "4.2.5",
    "lint-staged": "10.2.11",
    "mongoose": "5.10.0",
    "postcss-flexbugs-fixes": "4.2.1",
    "postcss-preset-env": "6.7.0",
    "prettier": "2.0.5",
    "rimraf": "3.0.2",
    "styled-jsx-plugin-postcss": "2.0.1",
    "tailwindcss": "1.6.2",
    "typescript": "3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run type-check && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json}": [
      "npm run lint",
      "npm run prettify"
    ]
  }
}
